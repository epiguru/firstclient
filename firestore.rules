rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isChatParticipant(chatData) {
      return isSignedIn() && (request.auth.uid in chatData.participants);
    }

    // Chat documents: allow reads to participants only
    match /chats/{chatId} {
      allow read: if isChatParticipant(resource.data);

      // Messages within a chat: allow reads to participants of the parent chat
      match /messages/{messageId} {
        allow read: if isChatParticipant(get(/databases/$(database)/documents/chats/$(chatId)).data);
      }
    }

    // Optionally allow reading user profiles when signed in (adjust as needed)
    match /users/{userId} {
      allow read: if isSignedIn();
    }

    // Everything else denied by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}