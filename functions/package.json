{
  "name": "functions",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --import=./data --export-on-exit=./data",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "seed": "npm run build && node lib/scripts/seed.js",
    "seed:emu": "npm run build && AUTH_EMULATOR_HOST=127.0.0.1:9099 FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 node lib/scripts/seed.js"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.9.2"
  },
  "private": true
}
